<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageButton_ShortSettings">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageButtonLeft_ShortSettings" parent="ImageButton_ShortSettings">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="ImageButtonRight_ShortSettings" parent="ImageButton_ShortSettings">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Spinner_ShortSettings">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
